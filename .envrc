set -e

PROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
NODE_VERSIONS="22"

export PROOT
export NODE_VERSIONS
export NVM_DIR="$HOME/.nvm"

export XDG_BIN_HOME="$HOME/.local/bin"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_RUNTIME_DIR="$HOME/.local/run"
export XDG_STATE_HOME="$HOME/.local/state"

PATH_add "$NVM_DIR/nvm.sh"
PATH_add "$HOME/.bun/bin"
PATH_add "$HOME/.task"
PATH_add "$XDG_BIN_HOME"

use_nvm() {
  watch_file .nvmrc
  if ! [[ -d "$NVM_DIR" ]]; then
    echo "Installing NVM" >&2
    curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.40.2/install.sh | bash
  fi

  PATH_add "$NVM_DIR"
  source "$NVM_DIR/nvm.sh" || return 1
  # shellcheck source=/Users/jhettenh/.nvm/nvm.sh

  nvm install
  layout node
}

use_bun() {
  watch_file .bun-version
  if ! command -v bun >/dev/null 2>&1; then
    echo "Installing Bun" >&2
    curl -fsSL https://bun.sh/install | bash
  fi

  PATH_add "$HOME/.bun/bin"
  bun install
}

use_task() {
  watch_file Taskfile.yaml
  if ! command -v task >/dev/null 2>&1; then
    echo "Installing Task" >&2
    mkdir -p "$HOME/.task"
    sh -c "$(curl --location https://taskfile.dev/install.sh)" -- -d -b "$HOME/.task"
  fi

}

use_nvm && use_bun
use_task

if ! has "nvm" || ! has "bun" || ! has "task"; then
  echo "Please install direnv, nvm, bun, and task to use this script." >&2
  exit 2
fi
